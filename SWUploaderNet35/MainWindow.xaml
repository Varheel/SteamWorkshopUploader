<NavigationWindow x:Class="SWUploaderNet35.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWUploaderNet35"
        mc:Ignorable="d"
        Title="Steam Workshop Uploader" Height="450" Width="800" ResizeMode="CanMinimize"
        Source="StartPage.xaml" ShowsNavigationUI="False">
    <Window.Resources>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Margin" Value="0 20 0 0"/>
            <Setter Property="Padding" Value="0 5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10 0"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
</NavigationWindow>
